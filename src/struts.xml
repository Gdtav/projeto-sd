<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="DropMusic" extends="struts-default">

        <default-action-ref name="index" />

        <global-results>
            <result name="error">/error.jsp</result>
        </global-results>

        <!-- all exceptions not caught by the application will lead to error.jsp -->
        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error" />
        </global-exception-mappings>

        <!-- 'index' action leads to the view provided by index.jsp -->
        <action name="index">
            <result>/index.jsp</result>
        </action>

        <!-- 'login' action calls 'execute' in 'LoginAction' -->
        <action name="login" class="WebStrut.Action.LoginAction" method="execute">
            <result name="success">/app.jsp</result>
            <result name="login">/index.jsp</result>
        </action>

        <!-- 'search_alb' action calls 'album' in 'SearchAction' -->
        <action name="search_alb" class="WebStrut.Action.SearchAction" method="albums">
            <result name="success">/search.jsp</result>
            <result name="error">/error.jsp</result>
        </action>

        <!-- 'search_alb' action calls 'album' in 'SearchAction' -->
        <action name="search_art" class="WebStrut.Action.SearchAction" method="artists">
            <result name="success">/search.jsp</result>
            <result name="error">/error.jsp</result>
        </action>

        <action name="search_art_info" class="WebStrut.Action.SearchAction" method="artist_info">
            <result name="success">/search.jsp</result>
            <result name="error">/error.jsp</result>
        </action>

        <action name="search_alb_info" class="WebStrut.Action.SearchAction" method="album_info">
            <result name="success">/search.jsp</result>
            <result name="error">/error.jsp</result>
        </action>

        <action name="review" class="WebStrut.Action.SearchAction" method="review_alb">
            <result name="success">/search.jsp</result>
            <result name="error">/error.jsp</result>
        </action>

        <action name="show_insert_artist" class="WebStrut.Action.SearchAction" method="show_insert_artist">
            <result name="success">/search.jsp</result>
            <result name="error">/error.jsp</result>
        </action>

        <action name="show_insert_album" class="WebStrut.Action.SearchAction" method="show_insert_album">
            <result name="success">/search.jsp</result>
            <result name="error">/error.jsp</result>
        </action>

        <action name="show_insert_song" class="WebStrut.Action.SearchAction" method="show_insert_song">
            <result name="success">/search.jsp</result>
            <result name="error">/error.jsp</result>
        </action>

        <action name="register" class="WebStrut.Action.RegisterAction" method="execute">
            <result name="success">/index.jsp</result>
            <result name="error">/error.jsp</result>
        </action>

    </package>
</struts>